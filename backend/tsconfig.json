{
    "compilerOptions": {
      "target": "es2016",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
    },
    "baseUrl": "src",
    "paths": {
      "@controller/*": ["controllers/*"],
      "@model/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@common/*": ["common/*"],
      "@route/*": ["routes/*"],
    },
    "include": ["src"],
    "exclude": ["node_modules"],
  }